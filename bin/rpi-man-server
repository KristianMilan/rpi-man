#!/bin/sh

name="rpi-man-server"
pid_file=".pid"

start()
{
    echo "Starting $name..."
    ./bin/www &
    echo $! > $pid_file
    if is_running; then
        return 0
    else
        echo "ERROR: Unable to start server."
        return 1
    fi
}

stop()
{
    echo "Stopping $name..."
    kill `get_pid`
    if ! is_running; then
        rm $pid_file
        echo "$name is now stopped."
        return 0
    else
        echo "ERROR: Unable to stop server."
        return 1
    fi
}


get_pid()
{
    cat $pid_file
}

is_running()
{
    [ -f "$pid_file" ] && ps `get_pid` > /dev/null 2>&1
}


case $1 in
    start)
        if ! is_running; then
            start
        else
            echo "$name is already started."
            exit 0
        fi
        ;;
    stop)
        if is_running; then
            stop
        else
            echo "$name is already stopped."
            echo "Use killall node if you want to kill all node processes."
            exit 0
        fi
        ;;
    restart)
        if is_running; then
            stop
        fi
        sleep 1
        start
        ;;
    status)
        if is_running; then
            echo "$name is running."
        else
            echo "$name is stopped."
            exit 1
        fi
        ;;
    *)
        echo "Usage: $name {start|stop|restart|status}"
        exit 1
        ;;
esac

exit 0
